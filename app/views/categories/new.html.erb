<h1>Categories#new</h1>
<p>Find me in app/views/categories/new.html.erb</p>


<%= form_for @category, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <button type="button" class="btn btn-light">
    <%= f.submit %>
  </button>

<% end %>




<div>
  <%= link_to "Back to Categories", categories_path, class: "btn btn-dark" %>
</div>
