<h1>Categories#show</h1>
<p>Find me in app/views/categories/show.html.erb</p>


<%= form_for @category, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>


  <div type="button" class="btn btn-light">
    <%= f.submit %>
  </div>

<% end %>


<br>

<div>
  <%= link_to "Delete", @category, method: :delete, class: "btn btn-danger" %>
</div>
<br>

<div>
  <%= link_to "Back to Items", categories_path, class: "btn btn-dark" %>
</div>
