

<%= form_for @restaurant, url: {action: :create}, html: {class: "nifty_form"} do |f| %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <br>

  <div>
    <%= f.submit "Create Restaurant", class: 'btn  btn-primary' %>
  </div>

<% end %>

<br>


<div>
  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-dark" %>
</div>
